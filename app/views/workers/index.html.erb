<div class="wrapper-card">
  <div class="container">
    <div class="row">
      <% @workers.each do |worker| %>
        <div class="col-xs-12 col-sm-4">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://placehold.it/20x300');">
              <div class="card-category">Popular</div>
              <div class="card-description">
                <h2><%= worker.first_name %></h2>
                <p><%= worker.position %></p>
              </div>
              <img class="card-user avatar" src="user.jpg">
              <a class="card-link" href="#" ></a>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>