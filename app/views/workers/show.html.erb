<div class="wrapper-profile">
  <div class="container">
    <div class="row col-xs-12">
      <%= link_to "back", workers_path(staff_size: session[:jobrequest_staff_size], location: session[:jobrequest_location], position: session[:jobrequest_position]) , class:"btn btn-secondary"%>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-3 col-sm-offset-3">
        <!-- image link -->
        <% if !@worker.photo.nil? %>
          <%= cl_image_tag @worker.photo, height: 300, width: 200, crop: :fill %>
        <% else %>
          <%= image_tag "http://placehold.it/250x300", class:"img-responsive img-thumbnail" %>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-3">
        <h1><%= @worker.first_name %> <%= @worker.last_name %> </h1>
        <p>Position: <%= @worker.position %></p>
        <p>Location: <%= @worker.address %></p>
        <p>Email: <%= @worker.email %></p>
        <%= link_to "Hire", worker_bookings_path(worker_id: @worker.id), method: :post, class:"btn btn-success" %>
        <%= link_to "Edit", edit_worker_path, class:"btn btn-success" %>
        <% unless @worker.bookings.empty? %>
          <p>You offered a job to <%= @worker.first_name %></p>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="description-part">
          <h5>Description:</h5>
          <p class="text-justify"><%= @worker.description %></p>
        </div>
      </div>
    </div>
  </div>
</div>
