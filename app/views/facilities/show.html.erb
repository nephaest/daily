<div class="wrapper-facility">
  <div class="container", id="facility">
    <div class="row">
      <div class="col-xs-12">
        <div class="container-header">
          <div class="header-inline">
            <h1><%= @facility.name %></h1>
          </div>
      </div>
      <div class="container-restaurant">
          <% if !@facility.photo.nil? %>

              <%= cl_image_tag @facility.photo, height: 300, width: 900, crop: :fill %>
          <% else %>
            <%= image_tag "restaurant.jpeg", class:"restaurant" %>
          <% end %>
        <div class="card text-center">
          <div class="name_user">
              <h4> <%= @facility.user.first_name.capitalize %> <%= @facility.user.last_name.upcase %></h4>
          </div>
          <%= render 'owner', owner: @facility.user if @facility.user %>
          <div class="contact-btn">
              <%= link_to "Contact me", "#" ,class:"btn btn-primary", id:"contact" %>
          </div>
        </div>
      </div>
        <!-- image link -->
      </div>
      <div class="col-xs-12">
      <br>

        <p><strong>Category:</strong> <%= @facility.category.capitalize %></p>
      </div>
    </div>
      <div class="description-part">
        <h5><strong>Description:</strong></h5>
        <p class="text-justify"><%= @facility.description %></p>
    </div>
  </div>
</div>



