
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h2>Add a new facility</h2>

        <%= simple_form_for @facility do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :siret %>
            <%= f.input :creation_date, as: :string, required: true, input_html: {class: 'creation_date'} %>
            <%= f.input :address %>
            <%= f.input :size %>
            <%= f.input :category %>
            <%= f.input :website_url %>
            <%= f.input :description %>
            <%= f.input :photo %>
            <% f.input :photo_cache, as: :hidden %>

          </div>

          <div class="form-actions">
            <%= f.button :submit, "Create", class:"btn btn-primary" %>
          </div>

        <% end %>

        <% #render "devise/shared/links" %>

    </div>
  </div>
</div>
